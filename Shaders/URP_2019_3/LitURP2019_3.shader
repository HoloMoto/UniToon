        [Normal] _DetailNormalMap("Normal Map", 2D) = "bump" {}

        _OutlineMask("Outline Mask", 2D) = "white" {}
        _OutlineWidth("Outline Width", Range(0.0, 20.0)) = 0.0
        _OutlineLightAffects("Outline Light Affects", Range(0.0, 1.0)) = 1.0
